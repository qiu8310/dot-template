{
  "name": "dot-template-core",
  "main": "out/index",
  "typings": "out/index.d.ts",
  "bin": {
    "install-dot-template-types": "out/install-types.js"
  },
  "description": "create new files according to pre-defined templates",
  "version": "0.0.9",
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run build",
    "clear": "remove-all out",
    "watch": "tsc -watch -p ./",
    "build": "npm run clear && tsc -p ./ && node out/install-types.js ../dot-template-types",
    "test": "nyc _mocha -R dot src/test/core/test*",
    "report": "nyc report --reporter html --report-dir out/coverage"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "check-coverage": false,
    "include": [
      "src/common/*.ts",
      "src/core/**/*.ts"
    ],
    "exclude": []
  },
  "keywords": [
    "dtpl",
    "template",
    "file",
    "variable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qiu8310/dot-template"
  },
  "devDependencies": {
    "@types/ejs": "~2.5.1",
    "@types/fs-extra": "~5.0.4",
    "@types/minimatch": "~3.0.1",
    "@types/mocha": "~2.2.42",
    "@types/node": "~8.9.5",
    "mocha": "~5.0.5",
    "nyc": "~11.4.0",
    "ts-node": "~7.0.1",
    "typescript": "~3.2.2"
  },
  "dependencies": {
    "ejs": "~2.5.9",
    "fs-extra": "~5.0.0",
    "ignore": "~3.3.10",
    "minimatch": "~3.0.4",
    "mora-common": "~1.0.22",
    "mora-scripts": "~1.6.42",
    "nunjucks": "~3.0.1",
    "tslib": "~1.9.3"
  }
}
